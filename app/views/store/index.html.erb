<%= render 'home/header' %>
<%= render 'home/nav' %>

<section class="page-section cta">
            <div class="container">
                <div class="row">
                    <div class="col-xl-9 mx-auto">
                        <div class="cta-inner bg-faded text-center rounded">
                            <h2 class="section-heading mb-5">
                                <span class="section-heading-upper">Come On In</span>
                                <span class="section-heading-lower">We're Open</span>
                            </h2>
                            <ul class="list-unstyled list-hours mb-5 text-left mx-auto">
                                <li class="list-unstyled-item list-hours-item d-flex">
                                    Sunday
                                    <span class="ms-auto">Closed</span>
                                </li>
                                <li class="list-unstyled-item list-hours-item d-flex">
                                    Monday
                                    <span class="ms-auto">12:00 PM to 9:00 PM</span>
                                </li>
                                <li class="list-unstyled-item list-hours-item d-flex">
                                    Tuesday
                                    <span class="ms-auto">12:00 PM to 9:00 PM</span>
                                </li>
                                <li class="list-unstyled-item list-hours-item d-flex">
                                    Wednesday
                                    <span class="ms-auto">12:00 PM to 9:00 PM</span>
                                </li>
                                <li class="list-unstyled-item list-hours-item d-flex">
                                    Thursday
                                    <span class="ms-auto">11:00 AM to 10:00 PM</span>
                                </li>
                                <li class="list-unstyled-item list-hours-item d-flex">
                                    Friday
                                    <span class="ms-auto">11:00 AM to 10:00 PM</span>
                                </li>
                                <li class="list-unstyled-item list-hours-item d-flex">
                                    Saturday
                                    <span class="ms-auto">11:00 AM to 10:00 PM</span>
                                </li>
                            </ul>
                            <p class="address mb-5">
                                <em>
                                    <strong>227 Oklahoma Blvd</strong>
                                    <br />
                                    Alva, OK 73717
                                </em>
                            </p>
                            <p class="mb-0">
                                <small><em>Call Anytime</em></small>
                                <br />
                                (580) 327-9021
                            </p>
                        </div>
                    </div>
                </div>
            </div>
        </section>
        <section class="page-section about-heading">
            <div class="container">
                <div class="about-heading-content">
                    <div class="row">
                        <div class="col-xl-9 col-lg-10 mx-auto">
                            <div class="bg-faded rounded p-5">
                                <h2 class="section-heading mb-4">
                                    <span class="section-heading-upper">Phone, Email, Facebook</span>
                                    <span class="section-heading-lower">Contact Us!</span>
                                </h2>

                                <!-- Contact Section Form-->
                                <div class="row justify-content-center">
                                    <div class="col-lg-8 col-xl-7">

                                  <%= form_tag(send_mail_path, remote: true) do %>
                                    <div class="form-floating mb-3">
                                      <%= text_field_tag 'name', nil, :required => true, class: 'form-control', placeholder: 'Enter your name...' %>
                                      <%= label_tag 'name', 'Full Name' %>
                                    </div>
                                     <div class="form-floating mb-3">
                                       <%= email_field_tag 'email', nil, :required => true, class: 'form-control', placeholder: 'Your Email Address' %>
                                       <%= label_tag 'email', 'Email' %>
                                     </div>
                                     <div class="form-floating mb-3">
                                       <%= telephone_field_tag 'phone', nil, class: 'form-control', placeholder: 'Your Phone Number' %>
                                       <%= label_tag 'phone', 'Phone' %>
                                     </div>
                                     <div class="form-floating mb-3">
                                       <%= text_area_tag 'message', nil, :required => true, class: 'form-control text-area-style', rows: 4, placeholder: 'Message' %>
                                       <%= label_tag 'message', 'Message' %>
                                     </div>
                                       <%= submit_tag nil, class: 'btn btn-primary btn-xl ' %>

                                       <div id="submitSuccessMessage">
                                           <div class="text-center mb-3">
                                               <div class="fw-bolder"><%=flash[:notice]%></div>
                                           </div>
                                       </div>

                                    <% end %>

                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section>

<%= render 'home/footer' %>
